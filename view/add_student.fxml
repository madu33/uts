<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" styleClass="root" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddNewStudentController">
		
	<stylesheets><URL value="@style.css" /></stylesheets>
   <children>
      <AnchorPane fx:id="lbAddNewStudent" prefHeight="400.0" prefWidth="500.0" stylesheets="@style.css">
         <children>
            <Label id="lbLabel" layoutX="-1.0" layoutY="-1.0" prefHeight="85.0" prefWidth="500.0" stylesheets="@style.css" text="         Add New Student" />
            <Label id="detailsPanel" layoutX="37.0" layoutY="113.0" prefHeight="212.0" prefWidth="425.0" />
            <Label layoutX="51.0" layoutY="147.0" prefHeight="17.0" prefWidth="133.0" text="Student Number  : " />
            <Label layoutX="51.0" layoutY="191.0" prefHeight="17.0" prefWidth="133.0" text="Student Name : " />
            <Label layoutX="51.0" layoutY="233.0" prefHeight="17.0" prefWidth="133.0" text="Attendance  :" />
            <Label layoutX="51.0" layoutY="271.0" prefHeight="17.0" prefWidth="133.0" text="Scholarship :" />
            <TextField fx:id="txtStudentNumber" layoutX="176.0" layoutY="143.0" onAction="#isStudentNumber" onKeyReleased="#checkStudentNumberHere" prefHeight="25.0" prefWidth="252.0" />
            <TextField fx:id="txtStudentName" layoutX="176.0" layoutY="187.0" prefHeight="25.0" prefWidth="252.0" />
            <RadioButton fx:id="rdFullTime" layoutX="176.0" layoutY="233.0" mnemonicParsing="false" onAction="#setAttendanceFullTime" text="Full Time" />
            <RadioButton fx:id="rdPartTime" layoutX="266.0" layoutY="233.0" mnemonicParsing="false" onAction="#setAttendancePartTime" text="Part Time" />
            <CheckBox fx:id="checkScholarship" layoutX="176.0" layoutY="271.0" mnemonicParsing="false" onAction="#checkScholarship" />
            <Button fx:id="btnClose" layoutX="132.0" layoutY="349.0" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0" prefWidth="81.0" text="Cancel" />
            <Button fx:id="btnAddStudent" layoutX="239.0" layoutY="349.0" mnemonicParsing="false" onAction="#addNewStudent" prefHeight="25.0" prefWidth="81.0" text="Add" />
            <Label fx:id="lbError" layoutX="177.0" layoutY="301.0" prefHeight="17.0" prefWidth="259.0" styleClass="error" stylesheets="@style.css" />
         </children>
      </AnchorPane>
   </children>
	
</VBox>
